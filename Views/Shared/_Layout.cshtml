<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />
</head>
<body>
    <div class="container">
        <div class="header-top">
            <img src="~/Images/logo (2).png" alt="Logo" class="logo" />
            <div class="search-container">
                @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                {
                    <div class="form-group">
                        @Html.TextBox("Search", null, new { @class = "form-control", @placeHolder = "Srearch Products" })
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                }

            </div>
        </div>
    </div>

    <div id="navbar" class="navbar">
        <ul class="navbar-nav">
            <li>@Html.ActionLink("HOME", "Index", "Home")</li>

            <li>@Html.ActionLink("GENERATE", "Generate", "Home")</li>

            <li>@Html.ActionLink("Category", "Index", "Categories")</li>
            <li>@Html.ActionLink("Product", "Index", "Products")</li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">HELP <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="javascript:void(0);" onclick="showContactInfo();">CONTACT</a>
                    </li>
                    <li>@Html.ActionLink("CORRECTION", "Correct", "Home")</li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="bigbox">
        <div class="slideshow-container">
            <div class="mySlides fade">
                <img src="~/Images/SHOW1.png" style="width:100%" alt="show1">
            </div>
            <div class="mySlides fade">
                <img src="~/Images/SHOW2.png" style="width:100%" alt="show2">
            </div>
            <div class="mySlides fade">
                <img src="~/Images/SHOW3.png" style="width:100%" alt="show3">
            </div>
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
    </div>


    @RenderBody()
    @RenderSection("Scripts", required: false)



    <script src="@Url.Content("~/Scripts/popu.js")"></script>
    <script src="@Url.Content("~/Scripts/ppt.js")"></script>


    <footer class="footer">
        <div class="container">
            <hr>
            <p>
                ©WenKnowledge company | E-mail:
                <a href="mailto:zhangwen2004@qq.com">zhangwen2004@qq.com</a>
            </p>
        </div>
    </footer>

</body>
</html>
